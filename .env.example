# Database Configuration
DATABASE_URL=sqlite:///./budgeting.db
POSTGRES_DB=budgeting_db
POSTGRES_USER=budgeting_user
POSTGRES_PASSWORD=secure_password_here

# Security
SECRET_KEY=your-very-secure-secret-key-here-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# URLs
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO

# Redis (for caching and background tasks)
REDIS_URL=redis://redis:6379/0

# Email Configuration (if needed)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls

# Rate Limiting
RATE_LIMIT_STORAGE=redis://redis:6379/1

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn-here